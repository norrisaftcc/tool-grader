# Canvas API Configuration
CANVAS_API_TOKEN=your_canvas_api_token_here
CANVAS_API_URL=https://your-institution.instructure.com/api/v1/
CANVAS_COURSE_ID=12345

# GitHub Configuration
GITHUB_TOKEN=your_github_token_here
GITHUB_WEBHOOK_SECRET=your_webhook_secret_here
GITHUB_ORG=your-organization-name

# Docker Configuration
DOCKER_IMAGE=python-autograder:latest
DOCKER_MEMORY_LIMIT=256m
DOCKER_CPU_LIMIT=0.5
DOCKER_TIMEOUT=30

# Flask Configuration (for webhook service)
FLASK_SECRET_KEY=generate_a_secure_secret_key
FLASK_PORT=5000
FLASK_DEBUG=False

# Autograder Configuration
AUTOGRADER_WORK_DIR=/tmp/autograder
AUTOGRADER_LOG_LEVEL=INFO
AUTOGRADER_MAX_RETRIES=3

# Database (optional, for tracking submissions)
DATABASE_URL=sqlite:///autograder.db

# AWS Configuration (if using AWS deployment)
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key

# Queue Configuration (for async processing)
QUEUE_TYPE=sqs  # Options: sqs, redis, rabbitmq
QUEUE_URL=https://sqs.us-east-1.amazonaws.com/123456789/autograder-queue